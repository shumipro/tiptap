.Component_BeaconHat
  text-align center
  position absolute
  left: 0
  right: 0
  top: 24%
  
  &:before
    content ""
    display block
    background url(/images/parts/object-circleline.svg) 0 0 no-repeat
    position absolute
    top -52px
    left 50%
    margin-left -121px
    width 242px
    height 242px
    
    animation-name scaler
    animation-duration: 1.5s;
    animation-iteration-count: infinite;
    animation-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1.275)//cubic-bezier(0.6, -0.28, 0.74, 0.05);

    @-webkit-keyframes scaler
      from 
        transform scale(1)
      to
        transform scale(1.2)
    @keyframes scaler
      from 
        transform scale(1)
      to
        transform scale(1.2)
    
    
  
  .isPerformer__heading
    color Service_Font_Gray_dark
    margin-bottom Space_sizes[4]
    position relative
    top 65px
    opacity .5
    z-index 2
    
    
  .BeaconHat__hat
    width 100px
    height 100px
    border-radius 100px
    border .99px solid Service_Font_Gray_dark
    position relative
  
  .Component_ThumbsBackgroundImage
    top -6px
    z-index 1
    
    animation-name scaler2
    animation-duration 2.5s
    animation-iteration-count 1
    //animation-delay 2s
    animation-timing-function cubic-bezier(0.175, 0.885, 0.32, 1.275)//cubic-bezier(0.6, -0.28, 0.74, 0.05)
    
    @-webkit-keyframes scaler2
      from 
        opacity 0
        transform scale(1.2)
      to
        opacity 1
        transform scale(1)
    @keyframes scaler2
      from 
        opacity 0
        transform scale(1.2)
      to
        opacity 1
        transform scale(1)
    